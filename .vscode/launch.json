{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Attach to SAM CLI",
          "type": "node",
          "request": "attach",
          "address": "127.0.0.1",
          "port": 5858,
          // From the sam init example, it would be "${workspaceRoot}/hello-world"
          "localRoot": "${workspaceRoot}/src",
          "remoteRoot": "/var/task",
          "protocol": "inspector",
          "stopOnEntry": false
      }
  ]
}